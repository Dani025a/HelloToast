<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFF00">
    <Button
            android:text="@string/button_label_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" android:onClick="countUp"/>
    <Button
            android:text="@string/button_label_toast"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button_toast"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" android:onClick="showToast"/>
    <TextView
            android:text="@string/count_initial_value"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/show_count"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/button_toast"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="160sp" android:textStyle="bold"
            android:layout_marginBottom="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:textColor="@color/colorPrimary" android:gravity="center_vertical"
            android:textAllCaps="false" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:lineSpacingExtra="8sp" tools:ignore="RtlCompat"/>
</androidx.constraintlayout.widget.ConstraintLayout>